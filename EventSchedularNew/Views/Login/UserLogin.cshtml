@model EventSchedularNew.Models.MeetingLogin
@{
    //ViewBag.Title = "LoginMeetingRoom";
    Layout = "";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
@*<script src="~/Scripts/bootstrap.min.js"></script>*@
<link href="~/css/mdb.dark.min.css" rel="stylesheet" />
<link href="~/css/mdb.dark.rtl.min.css" rel="stylesheet" />
<link href="~/css/mdb.min.css" rel="stylesheet" />
<link href="~/css/mdb.rtl.min.css" rel="stylesheet" />
<script src="~/js/mdb.min.js"></script>

@using (Html.BeginForm())
{
    <div>
        <section class="vh-100 gradient-custom">
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card bg-dark text-white" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">
                                <div class="mb-md-5 mt-md-4 pb-5">
                                    <h2 class="fw-bold mb-2 text-uppercase">Meeting Room Login</h2>
                                    <p class="text-white-50 mb-5">Please enter your UserID and password!</p>
                                    <div class="form-outline form-white mb-4">
                                        @*<input type="email" id="typeEmailX"  class="form-control form-control-lg" />*@
                                        @Html.TextBoxFor(a => a.UserID, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "User ID", @id = "txtUserID" })
                                        @*@Html.ValidationMessageFor(a => a.UserID)*@
                                        @*<label class="form-label" id="UserID" for="typeEmailX">User ID</label>*@
                                    </div>

                                    <div class="form-outline form-white mb-4">
                                        @*<input type="password" id="typePasswordX" class="form-control form-control-lg" />*@
                                        @Html.TextBoxFor(a => a.PassWord, new { @class = "form-control form-control-lg", @type = "password", @placeholder = "Password", @id = "txtPassword" })
                                        @*@Html.ValidationMessageFor(a=>a.PassWord)*@
                                        @*<label class="form-label" id="PassWord" for="typePasswordX">Password</label>*@
                                    </div>

                                    <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!">Forgot password?</a></p>
                                    <div>
                                        @Html.ValidationSummary()
                                    </div>
                                    <div>
                                        <input class="btn btn-outline-light btn-lg px-5" type="submit" name="Login" id="Submit" />
                                    </div>

                                    @*<div class="d-flex justify-content-center text-center mt-4 pt-1">
                                            <a href="#!" class="text-white"><i class="fab fa-facebook-f fa-lg"></i></a>
                                            <a href="#!" class="text-white"><i class="fab fa-twitter fa-lg mx-4 px-2"></i></a>
                                            <a href="#!" class="text-white"><i class="fab fa-google fa-lg"></i></a>
                                        </div>*@

                                </div>

                                @*<div>
                                        <p class="mb-0">
                                            Don't have an account? <a href="#!" class="text-white-50 fw-bold">Sign Up</a>
                                        </p>
                                    </div>*@

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

<style>
    /*.gradient-custom {*/
    /* fallback for old browsers */
    /*background: #6a11cb;*/
    /* Chrome 10-25, Safari 5.1-6 */
    /*background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));*/
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    /*background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }*/
    form-outline {
        position: relative;
        width: 100%;
        background-color: white !important;
    }

    .form-outline.form-white .form-control {
        color: black;
        background-color: aliceblue;
    }
</style>
<script>
    $(document).ready(function () {
        debugger;
        var msg ='@TempData["msg"]'
        if (msg != '' && msg != 'Valid')
            alert(msg);
    });
    $("#Submit").on('click', function () {
        var usrid = $('#txtUserID').val();
        var psd = $('#txtPassword').val();
        if (usrid == '' || psd == '') {
            alert("Please Enter the valid details");
        }
    });

</script>