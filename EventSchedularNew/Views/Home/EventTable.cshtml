        $(document).ready(function () {
            $('[tool-tip-toggle="tooltip-demo"]').tooltip({
                placement: 'top'
            });
        });
        $(document).ready(function () {
            $("a").on('click', function (event) {
                if (this.hash !== "") {
                    event.preventDefault();
                    var hash = this.hash;
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 800, function () {
                        window.location.hash = hash;
                    });
                }
            });
        });
    </script>



